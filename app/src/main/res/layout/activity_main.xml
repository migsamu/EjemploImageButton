<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/ibVerduras"
        android:layout_width="153dp"
        android:layout_height="92dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="60dp"
        android:contentDescription="@string/verduras"
        android:onClick="mostrarVerduras"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ibNaranja"
        app:srcCompat="@drawable/verduras"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <ImageButton
        android:id="@+id/ibFruta"
        android:layout_width="130dp"
        android:layout_height="93dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/fruta"
        android:onClick="mostrarFrutas"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fruta"
        tools:ignore="ImageContrastCheck,DuplicateSpeakableTextCheck" />

    <TextView
        android:id="@+id/tvFruta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="188dp"
        android:text="@string/fruta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ibFruta" />

    <TextView
        android:id="@+id/tvVerduras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="176dp"
        android:text="@string/verduras"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ibVerduras" />

    <ImageButton
        android:id="@+id/ibPlatano"
        android:layout_width="113dp"
        android:layout_height="70dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/platanos"
        android:onClick="compraPlatanos"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFruta"
        app:srcCompat="@drawable/platano"
        tools:ignore="ImageContrastCheck,DuplicateSpeakableTextCheck" />

    <ImageButton
        android:id="@+id/ibNaranja"
        android:layout_width="101dp"
        android:layout_height="72dp"
        android:layout_marginStart="117dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/naranja"
        android:onClick="compraNaranjas"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toEndOf="@+id/ibPlatano"
        app:layout_constraintTop_toBottomOf="@+id/tvFruta"
        app:srcCompat="@drawable/naranjas"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <TextView
        android:id="@+id/tvPlatano"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="67dp"
        android:text="@string/platanos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ibPlatano" />

    <TextView
        android:id="@+id/tvNaranjas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="167dp"
        android:text="@string/naranja"
        app:layout_constraintStart_toEndOf="@+id/tvPlatano"
        app:layout_constraintTop_toBottomOf="@+id/ibNaranja" />

    <ImageButton
        android:id="@+id/ibPimiento"
        android:layout_width="115dp"
        android:layout_height="83dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/pimiento"
        android:onClick="compraPimientos"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvVerduras"
        app:srcCompat="@drawable/pimientos"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <ImageButton
        android:id="@+id/ibPatata"
        android:layout_width="120dp"
        android:layout_height="82dp"
        android:layout_marginStart="98dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/patata"
        android:onClick="compraPatatas"
        android:scaleType="centerInside"
        app:layout_constraintStart_toEndOf="@+id/ibPimiento"
        app:layout_constraintTop_toBottomOf="@+id/tvVerduras"
        app:srcCompat="@drawable/patatas"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <TextView
        android:id="@+id/tvPimientos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:text="@string/pimiento"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ibPimiento" />

    <TextView
        android:id="@+id/tvPatatas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="159dp"
        android:text="@string/patata"
        app:layout_constraintStart_toEndOf="@+id/tvPimientos"
        app:layout_constraintTop_toBottomOf="@+id/ibPatata" />

    <TextView
        android:id="@+id/tvCompra"
        android:layout_width="339dp"
        android:layout_height="160dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPimientos" />

    <Button
        android:id="@+id/btnReset"
        android:layout_width="88dp"
        android:layout_height="38dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="16dp"
        android:onClick="reset"
        android:text="Reset"
        android:textSize="10sp"
        app:iconPadding="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>